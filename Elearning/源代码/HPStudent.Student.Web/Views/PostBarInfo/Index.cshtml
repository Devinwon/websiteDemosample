                            @*<div class="form-group">
                                <h2>@ViewBag.Title</h2>
                            </div>*@
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="panel panel-default">
                                        <div class="panel-body">
                                            <!-- table content -->
                                            <div class="gallery" id="links">

                                                <div class="gridview_empty text-center">没有找到符合条件的数据</div>

                                                <!-- END table content -->
                                            </div>
                                        </div>
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <!-- END PAGE CONTENT WRAPPER -->
        </div>
        <!-- END PAGE CONTENT -->

    </div>
    <!-- END PAGE CONTAINER -->
    <!-- Modal AJAX -->
    <div id="pop_modaldialog">
    </div> 
    <!-- END Modal AJAX -->
    <!-- START PRELOADS -->
    <audio id="audio-alert" src="@Url.Content("~/Content/audio/alert.mp3")" preload="auto"></audio>
