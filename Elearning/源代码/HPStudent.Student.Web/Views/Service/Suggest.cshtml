@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "建议与投诉";
    var ParentActionName = ViewContext.RouteData.Values["Action"].ToString().ToLower();
    var ParentControllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
}

<!-- START PAGE CONTAINER -->
<div class="page-container">

    @Html.Action("SideBar", "Common", new { ParentAction = ParentActionName, ParentController = ParentControllerName })

    <!-- PAGE CONTENT -->
    <div class="page-content">

        @Html.Action("BodyHeader", "Common")
        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">服务中心</a></li>
            <li class="active">@ViewBag.Title</li>
        </ul>
        <!-- END BREADCRUMB -->
        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-title">
            <h2><span class="fa fa-comment"></span> 建议与投诉</h2>
        </div>
        <div class="page-content-wrap">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading ui-draggable-handle">
                            <div class="btn-group pull-right">
                                <button id="btnAddSuggest" class="btn btn-primary btn-sm" type="button">
                                    <span class="fa fa-plus-square"></span> 我想说
                                </button>
                            </div>

                        </div>

                        <div class="panel-body">

                            <!-- table content -->
                            <div id="class-list" class="table-responsive">
                                <table class="table datatable_suggest table-bordered table-actions table-hover">
                                    <thead>
                                        <tr>
                                            <th width="120" class="text-center">类型</th>
                                            <th>主题</th>
                                            <th width="220" class="text-center">处理状态</th>
                                        </tr>
                                    </thead>
                                    <tbody id="QA_SelectList">
                                        <tr>
                                            <td valign="top" colspan="4" class="dataTables_empty">无数据</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                            <!-- END table content -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->

</div>
<!-- END PAGE CONTAINER -->
<!-- Modal AJAX -->
<div id="pop_modaldialog">
</div>
<!-- END Modal AJAX -->
<!-- START PRELOADS -->
<audio id="audio-alert" src="@Url.Content("~/Content/audio/alert.mp3")" preload="auto"></audio>
<audio id="audio-fail" src="@Url.Content("~/Content/audio/fail.mp3")" preload="auto"></audio>
<!-- END PRELOADS -->
