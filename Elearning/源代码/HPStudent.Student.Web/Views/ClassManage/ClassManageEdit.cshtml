<div class="modal" id="edit-manager" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 编辑实训班级</h4>
            </div>
            <div class="modal-body block">
                <form id="user-points-form" class="form-horizontal">
                    <!-- start -->
                    <input type="hidden" id="txt_PTCID">
                    <div class="form-group">
                        <label class="col-md-3 control-label">实训班级名称</label>

                        <div class="col-md-6 col-xs-12">
                            <input type="text" id="txt_PTCName" class="form-control">
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">入学年份</label>

                        <div class="col-md-6 col-xs-12">
                            <input type="text" id="txt_StudyYear" class="form-control">
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">校区</label>

                        <div class="col-md-6 col-xs-12">
                            <select class="form-control select" id="sel_School">
                                <option value="0">== 请选择 ==</option>
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">班级</label>

                        <div class="col-md-6 col-xs-12">
                            <select class="form-control select" id="sel_Class">
                                <option value="0">== 请选择 ==</option>
                            </select>
                        </div>

                    </div>
                    
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">实训班级成员</label>
                        <div class="col-md-7 col-xs-12">
                            <div class="col-md-12" id="StudentList">

                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 col-xs-12 control-label">已选择班级成员:</label>
                        <div id="divCname" class="col-md-6 col-xs-12">
                            
                        </div>
                        <input type="hidden" id="hdnSetClassID" />
                    </div>

                    <!-- end -->
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="EditClassManage()">确  定</button>
            </div>

        </div>
    </div>
</div>