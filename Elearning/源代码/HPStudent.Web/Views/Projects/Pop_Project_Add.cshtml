@model HPStudent.ViewModel.Projects.ProjectBook
<div class="modal" id="add-project" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 添加项目</h4>
            </div>
            <div class="modal-body block">
                <form id="user-points-form" class="form-horizontal">
                    <!-- start -->

                    <div class="form-group">
                        <label class="col-md-3 control-label">项目名称</label>

                        <div class="col-md-8 col-xs-12">
                            <input id="ProjectName" name="ProjectName" type="text" class="form-control" value="" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">显示设置</label>
                        <label class="col-md-3 ">
                            <input type="checkbox" id="cbShowTeacher" name="cbShowTeacher" class="icheckbox" value="1" /> 教学平台
                        </label>
                        <label class="col-md-3 ">
                            <input type="checkbox" id="cbShowShort" name="cbShowShort" class="icheckbox" value="2" /> 短训官网
                        </label>
                        

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">所属老师</label>

                        <div class="col-md-4 col-xs-12">
                            <select id="selTeacher" name="selTeacher" class="form-control select">
                                <option value="0">== 请选择 ==</option>
                                @foreach (var teacher in Model.TeacherList)
                                {
                                    <option value="@teacher.TID">@teacher.TeacherName</option>
                                }
                            </select>
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">使用到的技术</label>

                        <div class="col-md-8 col-xs-12">
                            <input id="UseTechnology" name="UseTechnology" type="text" class="tagsinput" value="" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">项目图片</label>

                        <div class="col-md-9 col-xs-12">
                            <input type="file" class="fileinput btn-success" data-filename-placement="inside" name="ProjectPic" id="ProjectPic" title="选择文件" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">项目描述</label>
                        <div class="col-md-8 col-xs-12">
                            <textarea id="ProjectDesc" name="ProjectDesc" class="form-control" rows="5"></textarea>
                        </div>

                    </div>

                    <!-- end -->
                </form>

            </div>
            <div class="modal-footer">
                <button id="btnPopAddProject" type="button" class="btn btn-primary" onclick="AddProject()">添 加</button>
            </div>

        </div>
    </div>
</div>
