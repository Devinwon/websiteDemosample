@model HPStudent.Entity.ProjectItem
<div class="modal" id="edit-projectitem" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 修改课程</h4>
            </div>
            <div class="modal-body block">
                <form id="user-points-form" class="form-horizontal">
                    <!-- start -->

                    <div class="form-group">
                        <label class="col-md-3 control-label">课程名称</label>
                        <div class="col-md-8 col-xs-12">
                            <input id="ProjectName" name="ProjectName" type="text" class="form-control" value="@Model.ProjectName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">下载</label>
                        <div class="col-md-8 col-xs-12">
                            <input id="PDF" name="PDF" type="text" class="form-control" value="@Model.PDF" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">PPT</label>
                        <div class="col-md-8 col-xs-12">
                            <input id="PPT" name="PPT" type="text" class="form-control" value="@Model.PPT" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">视频</label>
                        <div class="col-md-8 col-xs-12">
                            <input id="Video" name="Video" type="text" class="form-control" value="@Model.Video" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">网站</label>
                        <div class="col-md-8 col-xs-12">
                            <input id="URL" name="URL" type="text" class="form-control" value="@Model.URL" />
                        </div>
                    </div>
                    
                    <input hidden id="hideID" name="hideID" value="@Model.ID" />
                    <!-- end -->
                </form>

            </div>
            <div class="modal-footer">
                <button id="btnEditProjectItem" type="button" class="btn btn-primary" >修 改</button>
            </div>

        </div>
    </div>
</div>
