@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "练习题分类";
    var ParentActionName = ViewContext.RouteData.Values["Action"].ToString().ToLower();
    var ParentControllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
}
@model HPStudent.ViewModel.Exercises.Category

<!-- START PAGE CONTAINER -->
<div class="page-container">    

    @Html.Action("SideBar", "Common", new { ParentAction = ParentActionName, ParentController = ParentControllerName }) 
 
    <!-- PAGE CONTENT -->
    <div class="page-content">

        @Html.Action("BodyHeader", "Common")

        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">练习管理</a></li>
            <li class="active">练习题分类管理</li>
        </ul>
        <!-- END BREADCRUMB -->
        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-content-wrap">
            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="fa fa-list-ul"></span> 练习题分类管理</h3>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" action="/Exercises/Category" role="form">
                                <div class="form-group">

                                    <label class="col-md-1 control-label">选择专业</label>
                                    <div class="col-md-2 col-xs-2">
                                        <select id="selMajor" class="form-control select">
                                            <option>××请选择专业××</option>
                                            @foreach (HPStudent.Entity.Major item in Model.MajorList)
                                            {
                                                <option>@item.MajorName</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class=" col-md-1 control-label">包含的课程</label>
                                    <div id="IncludeCategory" class="col-md-11">
                                        
                                    </div>

                                </div>
                            </form>
                        </div>
                        <div class="panel-footer">
                            <button id="btnEdit" class="btn btn-primary pull-right"><span class="fa fa-pencil"></span> 修改</button>
                        </div>
                    </div>
                </div>
            </div>



        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->

<!-- Modal AJAX -->
<div id="pop_modaldialog">
</div>
<!-- END Modal AJAX -->
<!-- START PRELOADS -->
<audio id="audio-alert" src="@Url.Content("~/Content/audio/alert.mp3")" preload="auto"></audio>
