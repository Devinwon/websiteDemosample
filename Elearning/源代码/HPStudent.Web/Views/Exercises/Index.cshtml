@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "知识宝典";
    var ParentActionName = ViewContext.RouteData.Values["Action"].ToString().ToLower();
    var ParentControllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
}
@model HPStudent.ViewModel.Exercises.QA_Select



<!-- START PAGE CONTAINER -->
<div class="page-container">

    @Html.Action("SideBar", "Common", new { ParentAction = ParentActionName, ParentController = ParentControllerName }) 
    
    <!-- PAGE CONTENT -->
    <div class="page-content">

         @Html.Action("BodyHeader", "Common") 
        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">云课堂</a></li>
            <li class="active">@ViewBag.Title</li>
        </ul>
        <!-- END BREADCRUMB -->
        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-content-wrap">
            <form class="form-inline" role="form">

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="form-group">

                                    <label>选择课程：</label>
                                    <select id="selMajor" name="selMajor" class="form-control">
                                        <option>== 选择专业 ==</option>                                        
                                        @foreach (HPStudent.Entity.Major item in Model.MajorList)
                                        {
                                            <option>@item.MajorName</option>
                                        }
                                    </select>

                                </div>

                                <select id="selCourse" name="CID" class="form-control">
                                    <option>== 选择课程 ==</option>
                                </select>
                                <button type="button" id="btnSelExercise" class="btn btn-primary">选 择</button>
                                <button type="button" id="btnImport" class="btn btn-danger pull-right">批量导入数据</button>
                            </div>
                        </div>
                    </div>

                </div>
            </form>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading ui-draggable-handle">
                            <div class="btn-group ">
                                <button id="btnAddExercise" class="btn btn-primary btn-sm" type="button">
                                    <span class="fa fa-plus-square"></span> 添加题目
                                </button>
                            </div>

                        </div>

                        <div class="panel-body">

                            <!-- table content -->
                            <div id="class-list" class="table-responsive">
                                <table class="table datatable_question table-bordered table-actions table-hover">
                                    <thead>
                                        <tr>
                                            <th width="100">编号</th>
                                            <th width="600">题目</th>
                                            <th width="120" class="text-center">难度</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody id="QA_SelectList">
                                        <tr>
                                            <td valign="top" colspan="4" class="dataTables_empty">无数据</td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                            <!-- END table content -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->

</div>
<!-- END PAGE CONTAINER -->
<!-- Modal AJAX -->
<div id="pop_modaldialog">
</div>
<!-- END Modal AJAX -->
<!-- START PRELOADS -->
<audio id="audio-alert" src="@Url.Content("~/Content/audio/alert.mp3")" preload="auto"></audio>
<audio id="audio-fail" src="@Url.Content("~/Content/audio/fail.mp3")" preload="auto"></audio>
