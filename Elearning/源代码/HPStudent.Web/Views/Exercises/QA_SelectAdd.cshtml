@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "添加题库";
}
@model HPStudent.ViewModel.Exercises.QA_Select

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="modal" id="add-exercises-library" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">                
                    <button type="button" class="close" onclick="CloseDialog()" data-dismiss= ="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 添加题目</h4>
                </div>
                <div class="modal-body block">
                    <form id="user-points-form" action="/QA_SelectEdit" class="form-horizontal">
                        <!-- start -->

                        <div class="form-group">
                            <label class="col-md-3 control-label">题库分类</label>

                            <div class="col-md-3 col-xs-12">

                                <input type="text" id="QA_Select_Major" name="QA_Select_Major" class="form-control" value="Dotnet软件技术" readonly />
                            </div>

                            <div class="col-md-3 col-xs-12">
                                <input type="text" id="QA_Select_Category" name="QA_Select_Category" class="form-control" value="SQLServer数据库基础" readonly />
                            </div>

                        </div>
                        <div class="form-group">
                            <label class="col-md-3 control-label">题目</label>

                            <div class="col-md-9 col-xs-12">
                                <textarea id="QA_Select_Title" class="form-control"></textarea>
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                <input type="checkbox" value="A" /> 选项 A.
                            </label>

                            <div class="col-md-6 col-xs-12">
                                <input type="text" id="QA_Select_A" class="form-control" />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                <input type="checkbox" value="B" /> 选项 B.
                            </label>

                            <div class="col-md-6 col-xs-12">
                                <input type="text" id="QA_Select_B" class="form-control" />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                <input type="checkbox" value="C" /> 选项 C.
                            </label>
                            <div class="col-md-6 col-xs-12">
                                <input type="text" id="QA_Select_C" class="form-control" />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                <input type="checkbox" value="D" /> 选项 D.
                            </label>

                            <div class="col-md-6 col-xs-12">
                                <input type="text" id="QA_Select_D" class="form-control" />
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="col-md-3 control-label">
                                难 易 程 度 .
                            </label>
                            <div class="col-md-9 col-xs-12" style="white-space:nowrap;color:red; ">
                                <input type="radio" name="level" value="1" />&nbsp;&nbsp;1&nbsp;&nbsp;级 &nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="level" value="2" />&nbsp;&nbsp;2&nbsp;&nbsp;级 &nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="level" value="3" />&nbsp;&nbsp;3&nbsp;&nbsp;级 &nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="level" value="4" />&nbsp;&nbsp;4&nbsp;&nbsp;级 &nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="level" value="5" />&nbsp;&nbsp;5&nbsp;&nbsp;级 &nbsp;&nbsp;&nbsp;&nbsp;
                            </div>
                        </div>
                        <!-- end -->
                    </form>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" onclick="AddQuestion()">添 加</button>
                </div>

            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {          
            $('#QA_Select_Major').val($('#selMajor').find("option:selected").text());
            $('#QA_Select_Category').val($('#selCourse').find("option:selected").text());
        });
    </script>
</body>

</html>
