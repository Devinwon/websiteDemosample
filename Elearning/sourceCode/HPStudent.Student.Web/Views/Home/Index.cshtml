@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "云测试";
    var ParentActionName = ViewContext.RouteData.Values["Action"].ToString().ToLower();
    var ParentControllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
}

<!-- START PAGE CONTAINER -->
<div class="page-container">

    @Html.Action("SideBar", "Common", new { ParentAction = ParentActionName, ParentController = ParentControllerName })

    <!-- PAGE CONTENT -->
    <div class="page-content">

        @Html.Action("BodyHeader", "Common")
        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">我的学习</a></li>
            <li class="active">练习题库</li>
        </ul>
        <!-- END BREADCRUMB -->
        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-content-wrap">
            <form class="form-inline" role="form">

                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="form-group">

                                    <label>选择课程：</label>
                                    <select id="selMajor" name="selMajor" class="form-control">
                                        <option>== 选择专业 ==</option>
                                        <option value="1">Dotnet软件技术</option>
                                        <option value="2">Java软件技术</option>
                                        <option value="3">移动互联网</option>
                                        <option value="4">物联网应用</option>
                                        <option value="5">GIS应用技术</option>
                                        <option value="6">企业信息化</option>
                                        <option value="7">网络营销</option>
                                        <option value="8">软件测试技术</option>
                                        <option value="9">游戏美术设计</option>
                                        <option value="10">UI设计</option>
                                    </select>

                                </div>

                                <select id="selCourse" name="CID" class="form-control">
                                    <option>== 选择课程 ==</option>
                                </select>
                                <button type="button" id="btnCreateExercises" class="btn btn-danger">生成测试题</button>
                            </div>
                        </div>
                    </div>

                </div>
            </form>

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <!-- table content -->
                            <div id="question-list" class="table-responsive">
                                <table class="table datatable_question table-bordered table-actions table-hover">
                                    <thead>
                                        <tr>
                                            <th width="100" class="text-center">编号</th>
                                            <th width="200">范围</th>
                                            <th width="200">创建日期</th>
                                            <th width="200">完成日期</th>
                                            <th width="100" class="text-center">完成情况</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody id="QA_SelectList">
                                        <tr>
                                            <td class="text-center">12</td>
                                            <td>软件技术DOTNET</td>
                                            <td>2015-08-06 12:12:12</td>
                                            <td>2015-08-06 15:40:10</td>
                                            <td class="text-center"><span class="label label-success">已完成</span></td>
                                            <td>
                                                <button id='btn-edit' class="btn btn-primary btn-sm" data-id="15"><span class="fa fa-search"></span>查看</button>

                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="text-center">15</td>
                                            <td>移动互联技术</td>
                                            <td>2015-08-06 12:12:12</td>
                                            <td></td>
                                            <td class="text-center"><span class="label label-warning">未完成</span></td>
                                            <td>
                                                <button id='btn-doit' class="btn btn-primary btn-sm" data-id="15"><span class="fa fa-pencil"></span>测试</button>

                                            </td>
                                        </tr>

                                    </tbody>
                                </table>
                            </div>
                            <!-- END table content -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->

</div>
<!-- END PAGE CONTAINER -->
<!-- Modal AJAX -->
<div id="pop_modaldialog">
</div>
<!-- END Modal AJAX -->
<!-- START PRELOADS -->
<audio id="audio-alert" src="@Url.Content("~/Content/audio/alert.mp3")" preload="auto"></audio>
<audio id="audio-fail" src="@Url.Content("~/Content/audio/fail.mp3")" preload="auto"></audio>
<!-- END PRELOADS -->
