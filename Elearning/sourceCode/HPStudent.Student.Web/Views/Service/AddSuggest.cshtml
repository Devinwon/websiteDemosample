@{
    Layout = "~/Views/Shared/_StudentLayout.cshtml";
    ViewBag.Title = "意见与投诉";
    var ParentActionName = "Suggest";
    var ParentControllerName = "Service";
}

<!-- START PAGE CONTAINER -->
<div class="page-container">

    @Html.Action("SideBar", "Common", new { ParentAction = ParentActionName, ParentController = ParentControllerName })

    <!-- PAGE CONTENT -->
    <div class="page-content">

        @Html.Action("BodyHeader", "Common")
        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li><a href="#">客户服务</a></li>
            <li class="active">@ViewBag.Title</li>
        </ul>
        <!-- END BREADCRUMB -->
        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-title">
            <h2><span class="fa fa-coffee"></span> 意见与投诉</h2>
        </div>
        <div class="page-content-wrap">

            <div class="row">
                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="fa fa-coffee"></span> 我想说</h3>                           
                        </div>
                        <div class="panel-body">

                            <!-- table content -->
                            <div class="block">
                                <form class="form-horizontal" role="form">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">类别：</label>
                                        <div class="col-md-1">
                                            <label class="check"><input type="radio" class="icheckbox" checked="checked" name="iradio" /> 建议</label>
                                        </div>
                                        <div class="col-md-1">
                                            <label class="check"><input type="radio" class="icheckbox" name="iradio" /> 投诉</label>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">建议或投诉：</label>
                                        <div class="col-md-10">
                                            <textarea class="form-control" rows="5"></textarea>
                                        </div>
                                    </div>
                            </form>
                        </div>
                            
                            <!-- END table content -->
                        </div>

                        <div class="panel-footer">

                            <button type="submit" class="btn btn-primary pull-right">立即提交</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT WRAPPER -->
    </div>
    <!-- END PAGE CONTENT -->

</div>
<!-- END PAGE CONTAINER -->
<!-- Modal AJAX -->
<div id="pop_modaldialog">
</div>
<!-- END Modal AJAX -->
