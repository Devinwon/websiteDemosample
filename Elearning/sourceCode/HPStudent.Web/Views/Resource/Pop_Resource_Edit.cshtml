@model HPStudent.Entity.ResourceBook
<div class="modal" id="add-resource" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 添加资源</h4>
            </div>
            <div class="modal-body block">
                <form id="user-points-form" class="form-horizontal">
                    <!-- start -->

                    <div class="form-group">
                        <label class="col-md-3 control-label">资源名称</label>

                        <div class="col-md-8 col-xs-12">
                            <input id="ResourceName" name="ResourceName" type="text" class="form-control" value="" />
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">教师名称</label>

                        <div class="col-md-8 col-xs-12">
                            <input id="TeacherName" name="TeacherName" type="text" class="tagsinput" value="" />
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">资源来源</label>

                        <div class="col-md-8 col-xs-12">
                            <input id="ResourceFrom" name="ResourceFrom" type="text" class="tagsinput" value="" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">项目图片</label>

                        <div class="col-md-9 col-xs-12">
                            <input type="file" class="fileinput btn-success" data-filename-placement="inside" name="ResourcePic" id="ResourcePic" title="选择文件" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">项目描述</label>
                        <div class="col-md-8 col-xs-12">
                            <textarea id="ProjectDesc" name="ResourceDesc" class="form-control" rows="5"></textarea>
                        </div>

                    </div>

                    <!-- end -->
                </form>

            </div>
            <div class="modal-footer">
                <button id="btnAddProject" type="button" class="btn btn-primary" onclick="AddResource()">添 加</button>
            </div>

        </div>
    </div>
</div>

