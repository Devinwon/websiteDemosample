<div class="modal" id="edit-student-mark" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 添加考试成绩</h4>
            </div>
            <div class="modal-body block">
                <form id="user-points-form" class="form-horizontal">
                    <!-- start -->
                    <div class="form-group">
                        <label class="col-md-3 control-label">添加成绩</label>
                        <div class="col-md-3">
                            <select id="selTerm" class="form-control select">
                                <option>== 选择学年 ==</option>
                                <option value="1">第一学年</option>
                                <option value="2">第二学年</option>
                                <option value="3">第三学年</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-pencil"></span></span>
                                <input type="text" id="txtExamination1" class="form-control" placeholder="笔试成绩" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="input-group">
                                <span class="input-group-addon"><span class="fa fa-desktop"></span></span>
                                <input type="text" id="txtExamination2" class="form-control" placeholder="机试成绩" />
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-md-3 control-label">老师评价</label>

                        <div class="col-md-9 col-xs-12">
                            <textarea class="form-control" id="txtEvaluate" rows="5"></textarea>
                        </div>

                    </div>


                    <!-- end -->
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="AddMark()">添 加</button>
            </div>

        </div>
    </div>
</div>