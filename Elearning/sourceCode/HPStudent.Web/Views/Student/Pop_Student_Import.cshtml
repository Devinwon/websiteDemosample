<div class="modal" id="import-student" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead"><span class="fa fa-pencil"></span> 学生信息上传</h4>
            </div>
            <div class="modal-body block">
                <form id="user-points-form" class="form-horizontal" method="post" enctype="multipart/form-data">
                    <!-- start -->
                    <div class="form-group">
                        <label class="col-md-3 control-label">选择校区</label>

                        <div class="col-md-4 col-xs-4">
                            <select id="selImportSchool" class="form-control">
                                <option value="0">== 选择校区 ==</option>
                                @{
                                    List<HPStudent.ViewModel.Common.SchoolCommon> ViewList = (List<HPStudent.ViewModel.Common.SchoolCommon>)ViewData["ViewSchoolList"];
                                    foreach (HPStudent.ViewModel.Common.SchoolCommon item in ViewList)
                                    {
                                        <option value="@item.SchoolID">@item.SchoolName</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">选择年级</label>

                        <div class="col-md-4 col-xs-4">
                            <select id="selImportGrade" class="form-control">
                                <option value="0">== 选择年级 ==</option>
                                @{
                                    int i = (int)ViewData["year"];
                                    for (int k = i; k >0; k--)
                                    {
                                        <option value="@(2009+k)">@(2009 + k )</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-3 control-label">选择学生数据文件（Excel）</label>

                        <div class="col-md-9 col-xs-12">
                            <input type="file" class="fileinput" name="uploadFile" id="uploadFile" title="选择上传的文件" />
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label"></label>

                        <div class="col-md-9 col-xs-12">
                            如果没有上传格式模板，请点击<a href="/Upload/Template/学生信息导入模板.xls">这里</a>下载
                        </div>

                    </div>




                    <!-- end -->
                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="return ImportStudent()">导 入</button>
            </div>

        </div>
    </div>
</div>
