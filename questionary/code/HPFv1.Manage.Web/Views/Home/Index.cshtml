@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "首页";
    var ParentActionName = ViewContext.RouteData.Values["Action"].ToString().ToLower();
    var ParentControllerName = ViewContext.RouteData.Values["controller"].ToString().ToLower();
}
@*@model HPStudent.ViewModel.Exercises.Category*@

<!-- START PAGE CONTAINER -->


<div class="page-container">

    @Html.Action("SideBar", "Common", new { ParentAction = ParentActionName, ParentController = ParentControllerName })

    <!-- PAGE CONTENT -->
    <div class="page-content">

        @Html.Action("BodyHeader", "Common")

        <!-- START BREADCRUMB -->
        <ul class="breadcrumb">
            <li class="active">后台首页</li>
        </ul>
        <!-- END BREADCRUMB -->
        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-title">
            <h2><span class="fa fa-desktop"></span> 后台首页</h2>
        </div>



        <!-- PAGE CONTENT WRAPPER -->
        <div class="page-content-wrap">
            <!-- START WIDGETS -->
            <div class="row">
                <div class="col-md-3">

                    <!-- START WIDGET SLIDER -->
                    <div class="widget widget-default widget-carousel">
                        <div class="owl-carousel" id="owl-example">
                            <div>
                                <div class="widget-title">总用户数</div>
                                <div class="widget-subtitle">包括在校和离校</div>
                                <div class="widget-int">0</div>
                            </div>
                            <div>
                                <div class="widget-title">在校用户数</div>
                                <div class="widget-subtitle"></div>
                                <div class="widget-int">0</div>
                            </div>
                            <div>
                                <div class="widget-title">离校用户数</div>
                                <div class="widget-subtitle"></div>
                                <div class="widget-int">0</div>
                            </div>
                        </div>
                    </div>
                    <!-- END WIDGET SLIDER -->

                </div>
                <div class="col-md-3">

                    <!-- START WIDGET REGISTRED -->
                    <div class="widget widget-default widget-item-icon">
                        <div class="widget-item-left">
                            <span class="fa fa-user"></span>
                        </div>
                        <div class="widget-data">
                            <div class="widget-int num-count">0</div>
                            <div class="widget-title">活跃用户数</div>
                            <div class="widget-subtitle">7 days the logged in user</div>
                        </div>
                    </div>
                    <!-- END WIDGET REGISTRED -->

                </div>
                <div class="col-md-3">

                    <!-- START WIDGET MESSAGES -->
                    <div class="widget widget-default widget-item-icon">
                        <div class="widget-item-left">
                            <span class="fa fa-check-square-o"></span>
                        </div>
                        <div class="widget-data">
                            <div class="widget-int num-count">0</div>
                            <div class="widget-title">练习题数量</div>
                            <div class="widget-subtitle">Doesn't contain the exam</div>
                        </div>
                    </div>
                    <!-- END WIDGET MESSAGES -->

                </div>

                <div class="col-md-3">

                    <!-- START WIDGET CLOCK -->
                    <div class="widget widget-info widget-no-subtitle">
                        <div class="widget-big-int plugin-clock">00:00</div>
                        <div class="widget-subtitle plugin-date">Loading...</div>

                    </div>
                    <!-- END WIDGET CLOCK -->

                </div>
            </div>
            <!-- END WIDGETS -->
            <div class="row">
                <div class="col-md-8">

                    <!-- START SALES & EVENTS BLOCK -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="fa fa-female"></span> 活跃用户</h3>
                            <ul class="panel-controls">
                                <li><a href="#" class="panel-fullscreen"><span class="fa fa-expand"></span></a></li>
                                <li><a href="#" class="panel-collapse"><span class="fa fa-angle-down"></span></a></li>

                            </ul>
                        </div>
                        <div class="panel-body padding-0">
                            <div class="chart-holder" id="index-line-1" style="height: 220px;"></div>
                        </div>
                    </div>
                    <!-- END SALES & EVENTS BLOCK -->

                </div>

                <div class="col-md-4">

                    <!-- SERVER STATUS WIDGET -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><span class="fa fa-bolt"></span> 后台服务状态</h3>
                        </div>
                        <div class="panel-body" style="height:220px">

                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th width="60%">服务名称</th>
                                        <th class="text-center">状态</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><strong>统计服务</strong></td>
                                        <td class="text-center"><span class="label label-primary">未上线</span></td>
                                    </tr>
                                    <tr>
                                        <td><strong>视频处理服务</strong></td>
                                        <td class="text-center"><span class="label label-primary">未上线</span></td>
                                    </tr>


                                </tbody>
                            </table>



                        </div>

                    </div>
                    <!-- END SERVER STATUS WIDGET -->

                </div>
            </div>



        </div>
        <!-- END PAGE CONTENT WRAPPER -->



    </div>
    <!-- END PAGE CONTENT WRAPPER -->
</div>


<!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER -->
<!-- MESSAGE BOX-->
<!-- END MESSAGE BOX-->
<!-- Modal AJAX -->
<div id="pop_modaldialog">
</div>
<!-- END Modal AJAX -->
<!-- START PRELOADS -->
<audio id="audio-alert" src="@Url.Content("~/Content/audio/alert.mp3")" preload="auto"></audio>
<audio id="audio-fail" src="@Url.Content("~/Content/audio/fail.mp3")" preload="auto"></audio>
<!-- END PRELOADS -->
<!-- START SCRIPTS -->
<!-- START PLUGINS -->
<script type="text/javascript" src="@Url.Content("~/Js/plugins/jquery/jquery.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Js/plugins/jquery/jquery-ui.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Js/plugins/bootstrap/bootstrap.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Js/plugins/morris/raphael-min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Js/plugins/morris/morris.min.js")"></script>
<!-- END PLUGINS -->
<!-- THIS PAGE PLUGINS -->
<script src="~/Js/plugins/mcustomscrollbar/jquery.mCustomScrollbar.min.js"></script>

<script type="text/javascript" src="@Url.Content("~/Js/plugins/owl/owl.carousel.min.js")"></script>

<!-- END PAGE PLUGINS -->
