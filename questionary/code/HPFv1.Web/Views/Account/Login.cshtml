@{
    Layout = null;
    ViewBag.Title = "登录";
}
@model HPFv1.ViewModel.Login


<!DOCTYPE html>
<html lang="en" class="body-full-height">
<head>
    <!-- META SECTION -->
    <title>调查问卷系统 - @ViewBag.Title</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <!-- END META SECTION -->
    <!-- CSS INCLUDE -->
    <link rel="stylesheet" type="text/css" id="theme" href="@Url.Content("~/Content/css/theme-default.css")" />
   
    <!-- EOF CSS INCLUDE -->
</head>
<body>
    <div class="login-container">

        <div class="login-box animated fadeInDown">
            <div class="login-logo"></div>
            <div class="login-body">
                <div class="login-title">登&nbsp;&nbsp;陆</div>
                <form action="/Account/Login" class="form-horizontal" method="post">
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.Email, "", new { @Class = "control-label text-warning" })
                            @Html.TextBoxFor(model => model.Email, new { @Class = "form-control", @type = "text", @placeholder = "登录账号" })

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.Password, "", new { @Class = "control-label text-warning" })
                            @Html.TextBoxFor(model => model.Password, new { @Class = "form-control", @type = "password", @placeholder = "登录密码" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            @Html.ValidationMessageFor(model => model.VerificationCode, "", new { @Class = "control-label text-warning" })
                        </div>
                        <div class="col-md-6">
                            @Html.TextBoxFor(model => model.VerificationCode, new { @Class = "form-control", @type = "text", @placeholder = "验证码" })
                        </div>
                        <div class="col-md-6">
                            <a id="ChageValidateCode" style="cursor: pointer"><img id="validatecodeGraphic" src="/Account/GetValidateCode" /></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6">
                            <a href="#" class="btn btn-link btn-block">忘记了登录密码？</a>
                        </div>
                        <div class="col-md-6">
                            <button class="btn btn-info btn-block" type="submit">登 录</button>
                        </div>
                    </div>
                    <div class="login-or">或者</div>
                    <div class="form-group">
                        <div class="col-md-4">
                            <button class="btn btn-info btn-block btn-twitter"><span class="fa fa-heart"></span> 尚云客</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-info btn-block btn-facebook"><span class="fa fa-heart-o"></span> 厚溥教育</button>
                        </div>
                        <div class="col-md-4">
                            <button class="btn btn-info btn-block btn-google"><span class="fa fa-heart"></span> 景宁人力</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="login-footer">
                <div class="pull-left">
                    &copy; 2015 武汉尚云客科技有限公司
                </div>
                <div class="pull-right">
                    <a href="#">关于我们</a> |
                    <a href="#">联系我们</a>
                </div>
            </div>
        </div>

    </div>

</body>
</html>

<script type="text/javascript" src="@Url.Content("~/Js/plugins/jquery/jquery.min.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Js/Account/Login.js")"></script>
